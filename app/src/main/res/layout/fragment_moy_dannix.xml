<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.drawer.MoyDannixFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/familya"

                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_familya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/ism"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_ism"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/ochistva"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_ochstva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/telefon"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/haydovchilik_guvohnomasining_seriyasi_va_raqami"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_serianomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/vtomobil_markasi"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_markasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/avtomobil_modeli"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="@string/davlat_raqami"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_davlat_raqami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_border"
                    android:enabled="false"
                    android:paddingVertical="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>